---
import { execSync } from 'node:child_process';
import Footer from '../components/Footer.vue';
import Header from '../components/Header.vue';
import '../styles/global.css';

const { showLastUpdated = false } = Astro.props;

// biome-ignore lint/correctness/noUnusedVariables: used in template
let lastCommitDate = 'Unknown';
if (showLastUpdated) {
  try {
    const timestamp = execSync('git log -1 --format=%ci', { encoding: 'utf-8' }).trim();
    const date = new Date(timestamp);
    lastCommitDate =
      date.toLocaleString('en-GB', {
        timeZone: 'Europe/Berlin',
        day: 'numeric',
        month: 'short',
        year: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
      }) + ' CET';
  } catch {
    // Git not available or not a git repo
  }
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="flex min-h-screen flex-col">
		{showLastUpdated && <div class="w-full bg-[#1d1729] px-4 py-2 text-sm">Last updated: {lastCommitDate}</div>}
		<div class="flex flex-1 px-4 lg:px-16 xl:px-32 2xl:px-48">
			<div class="hidden w-8 border-l border-white/15 lg:block"></div>
			<div class="flex w-full flex-1 flex-col">
				<Header />
				<main class="flex w-full flex-1 items-center justify-center">
					<slot />
				</main>
				<Footer client:load />
			</div>
			<div class="hidden w-8 border-r border-white/15 lg:block"></div>
		</div>
	</body>
</html>
